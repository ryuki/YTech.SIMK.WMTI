<UserControl x:Class="TinySLUpload.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    mc:Ignorable="d" d:DesignWidth="640" d:DesignHeight="480">
    <Grid x:Name="LayoutRoot">
        <StackPanel Orientation="Vertical" HorizontalAlignment="Left" Margin="4,8,0,0" Height="224" VerticalAlignment="Top">
            <Button x:Name="btnUpload" Content="Upload Image" Click="btnUpload_Click"  Width="200" Height="30" HorizontalAlignment="Left"></Button>
            <TextBlock x:Name="txtMessage" Text="Choose Image" HorizontalAlignment="Left" Margin="0,3,0,0" Width="300" TextWrapping="Wrap"/>
            <ProgressBar x:Name="progressUpload" Minimum="0" Maximum="1" Width="300" Height="25" HorizontalAlignment="Left" Margin="0,20,0,0"></ProgressBar>
        </StackPanel>
    </Grid>
</UserControl>
